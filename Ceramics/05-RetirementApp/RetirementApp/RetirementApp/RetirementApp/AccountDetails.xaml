<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:RetirementApp.ViewModels;assembly=RetirementApp.ViewModels"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true"
             x:Class="RetirementApp.AccountDetails"
             x:DataType="viewModels:AccountViewModel">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Name}"
                   VerticalOptions="Center"
                   HorizontalOptions="Start" />
            <Label Text="{Binding Balance}"
                   VerticalOptions="Center"
                   HorizontalOptions="Start" />
            <Label Text="{Binding ContributionAmount}"
                   VerticalOptions="Center"
                   HorizontalOptions="Start" />
            <Label Text="{Binding ExpectedRateOfReturn}"
                   VerticalOptions="Center"
                   HorizontalOptions="Start" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>